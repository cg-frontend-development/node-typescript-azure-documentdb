{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "allowJs": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "typings/*"
            ]
        },
        "plugins": [
            { "name": "tslint-language-service" }
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}